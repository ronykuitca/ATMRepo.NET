@page
@model ATMChallengeOrigin.Pages.WithdrawalModel
@{
    ViewData["Title"] = "Retiro";
}

<div>
    <h1>Página de Retiro</h1>

    <form method="post">
        <div>
            <input type="text" id="mount" name="mount" class="form-control" readonly="readonly" />
        </div>

        <div class="numeric-keypad mt-3">
            @for (int i = 1; i <= 9; i++)
            {
                <button type="button" class="btn btn-info" onclick="appendDigit(@i)">@i</button>
            }
            <button type="button" class="btn btn-info" onclick="appendDigit(0)">0</button>
            <button type="button" class="btn btn-primary ml-3" onclick="clearInput()">Limpiar</button>
        </div>

        <div class="form-group mt-3">
            <button type="submit" name="submit" asp-page-handler="Withdraw" class="btn btn-success">Aceptar</button>
            <button type="button" class="btn btn-danger ml-3" onclick="exit()">Salir</button>
        </div>
        <input type="hidden" name="Card.Id" value="@Model.Card.Id" />
    </form>
</div>

<script>
    function appendDigit(digit) {
        var mount = document.getElementById("mount");
        mount.value += digit;
    }

    function clearInput() {
        document.getElementById("mount").value = "";
    }

    function exit() {
        window.location.href = "/";
    }
</script>
